.wrong-practice-page{align-items:center;background:#f5f7fa;box-sizing:border-box;display:flex;justify-content:center;min-height:100vh;padding:32rpx}.header-card{align-items:center;background:linear-gradient(135deg,#ef4444,#f87171);border-radius:32rpx;box-shadow:0 16rpx 48rpx rgba(239,68,68,.3);display:flex;flex-direction:column;overflow:hidden;padding:64rpx 48rpx;position:relative;width:100%}.header-card::before{background:hsla(0,0%,100%,.1);border-radius:50%;content:"";height:200rpx;position:absolute;right:-80rpx;top:-80rpx;width:200rpx}.header-card::after{background:hsla(0,0%,100%,.08);border-radius:50%;bottom:-60rpx;content:"";height:160rpx;left:-60rpx;position:absolute;width:160rpx}.icon{font-size:120rpx;margin-bottom:24rpx;position:relative;z-index:1}.title{color:#fff;font-size:52rpx;font-weight:700;margin-bottom:12rpx;position:relative;z-index:1}.subtitle{color:hsla(0,0%,100%,.9);font-size:28rpx;margin-bottom:48rpx;position:relative;z-index:1}.stats{align-items:center;display:flex;gap:48rpx;margin-bottom:48rpx;position:relative;z-index:1}.stat-item{align-items:center;display:flex;flex-direction:column}.stat-value{color:#fff;font-size:56rpx;font-weight:700;line-height:1;margin-bottom:8rpx}.stat-label{color:hsla(0,0%,100%,.85);font-size:24rpx}.start-btn{background:#fff;border-radius:56rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.15);padding:28rpx 80rpx;position:relative;transition:all .3s ease;z-index:1}.start-btn:active{box-shadow:0 4rpx 12rpx rgba(0,0,0,.2);transform:scale(.95)}.start-btn Text{color:#ef4444;font-size:36rpx;font-weight:600}.empty-tip{position:relative;z-index:1}.empty-tip Text{color:hsla(0,0%,100%,.95);font-size:32rpx;text-align:center}