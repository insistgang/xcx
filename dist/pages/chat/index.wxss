.chat-page{background:#f8fafc;display:flex;flex-direction:column;min-height:100vh}.message-list{flex:1;padding:16rpx}.message-item{display:flex;margin-bottom:16rpx}.message-item.user{flex-direction:row-reverse}.avatar{align-items:center;background:#fff;border-radius:50%;box-shadow:0 2rpx 8rpx rgba(0,0,0,.06);display:flex;flex-shrink:0;height:72rpx;justify-content:center;width:72rpx}.avatar.user{background:#5b9bd5}.avatar-emoji{font-size:32rpx}.message-content{border-radius:16rpx;margin:0 12rpx;max-width:70%;padding:16rpx}.message-content.assistant{background:#fff;border-top-left-radius:4rpx}.message-content.user{background:#5b9bd5;border-top-right-radius:4rpx}.message-text{font-size:28rpx;line-height:1.6;word-break:break-all}.message-content.assistant .message-text{color:#1f2937}.message-content.user .message-text{color:#fff}.typing{padding:16rpx 24rpx}.typing-dots{display:flex;gap:4rpx}.dot{animation:typing 1.4s infinite;background:#d1d5db;border-radius:50%;height:8rpx;width:8rpx}.dot:nth-child(2){animation-delay:.2s}.dot:nth-child(3){animation-delay:.4s}@keyframes typing{0%,100%,60%{transform:translateY(0)}30%{transform:translateY(-10rpx)}}.empty-state{align-items:center;display:flex;flex-direction:column;height:100%;justify-content:center;padding:32rpx}.empty-icon{font-size:120rpx;margin-bottom:16rpx}.empty-text{color:#6b7280;font-size:32rpx;margin-bottom:32rpx}.preset-questions{display:flex;flex-direction:column;gap:12rpx;width:100%}.preset-btn{background:#fff;border-radius:12rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,.06);color:#5b9bd5;font-size:28rpx;padding:16rpx;text-align:center}.input-area{background:#fff;border-top:1rpx solid #f3f4f6;padding:16rpx}.input-wrapper{align-items:center;background:#f8fafc;border-radius:999rpx;display:flex;gap:12rpx;padding:8rpx 8rpx 8rpx 16rpx}.chat-input{flex:1;font-size:28rpx;height:72rpx}.send-btn{align-items:center;background:#e5e7eb;border-radius:999rpx;color:#fff;display:flex;font-size:24rpx;height:72rpx;justify-content:center;width:96rpx}.send-btn.active{background:#5b9bd5}